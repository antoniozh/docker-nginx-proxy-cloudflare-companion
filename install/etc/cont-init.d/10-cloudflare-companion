  if [ -z ${CF_ZONE_ID} ] ; then printf "** [cloudflare-companion] ERROR: CF_ZONE_ID is not set!\n"; exit 1; fi;
  if [ -z ${CF_EMAIL} ] ; then printf ""** [cloudflare-companion] ERROR: CF_EMAIL is not set!\n"; exit 1; fi;
